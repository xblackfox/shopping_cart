<div class="cover">
  <div class="cover-text">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-danger">
          <div class="panel-heading">
            User Login
          </div>
          <div class="panel-body" id="signIn">
            <%= form_for(:user, url: session_path(:user)) do |f| %>
              <input type="email" name="user[email]" id="user_email" class="form-control" placeholder="Email"> 
              <input type="password" name="user[password]" id="user_password" class="form-control" placeholder="Password">
              <center> 
                <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-success'  %>
                <%= f.submit 'Sign in', class: 'btn btn-default' %> <br>
                <%= link_to "Forgot password?", new_password_path(:user) %> <br>
                <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-primary' %>
              </center>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>