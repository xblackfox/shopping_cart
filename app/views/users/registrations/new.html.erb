<div class="cover">
  <div class="cover-text">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-danger">
          <div class="panel-heading">
            User Registration
          </div>
          <div class="panel-body" id="signIn">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
              <%= devise_error_messages! %>
              <input type="text" name="user[username]" id="user_username" class="form-control" placeholder="Username" autofocus="true"> 
              <input type="email" name="user[email]" id="email" class="form-control" placeholder="Email Address"> 
               <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <input type="password" name="user[password]" id="user_password" class="form-control" placeholder="Password" autocomplete="off">
                <input type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control" placeholder="Password confirmation" autocomplete="off">
                <br>df
                <%= f.file_field :image %>
                <%= f.hidden_field :image_cache %>
                
                <%= f.submit 'Sign Up', class: 'btn btn-default' %>
            <% end %>
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

