<h1>RECEIPT SHOW PAGE</h1>

<table class="table">
	<thead>
		<tr>
			<td>Item_Name</td>
			<td>Picture</td>
			<td>Price</td>
			<td>Quantity</td>
			<td>Sub-total</td>
		</tr>	
	</thead>

	<tbody>
		<% @orderitems.each do |orderitem| %>
		<tr>
			<td><%= orderitem.product.item_name %></td>
			<td><%= image_tag orderitem.product.image.url, :size => "50x50" %>
			<td><%= orderitem.product.price %></td>
			<td><%= orderitem.quantity %></td>
			<td><%= orderitem.product.price * orderitem.quantity %></td>
		</tr> 
		<% end %>
		<tr>
			<td colspan="3"></td>
			<td><strong>Paid</strong></td>
			<td><%= @receipt.totalcost %></td>
		</tr>		
	</tbody>

</table>